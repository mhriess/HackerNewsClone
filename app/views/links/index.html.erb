<%= link_to "ORDER BY VOTES", links_path(:order => true) %>

<% @links.each do |link| %>
<p>
  <%= link_to link.title, link_path(link.id) %> |
  <%= link_to "#{link.url}", link.url %> |
  <% if link.user == current_user %>
    <%= link_to "Edit Link", edit_link_path(link) %>
  <% end %>
  
  <% if current_user && link.user_id != current_user.id && current_user.can_vote?(link.id) %>
    <%= link_to "^", link_votes_path(link), :method => :post %>
  <% end %>
</p>
<% end %>